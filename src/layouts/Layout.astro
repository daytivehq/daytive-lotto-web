---
interface Props {
  title: string;
  description?: string;
  path?: string;
  keywords?: string;
  jsonLd?: Record<string, unknown> | Record<string, unknown>[];
}

const siteUrl = 'https://lotto.daytive.com';

const {
  title,
  description = '매일 새로운 로또 번호를 추천받고, 당첨 여부를 확인하세요. 무료 로또 번호 생성기.',
  path = '',
  keywords = '로또, 로또 번호, 로또 추천, 로또 번호 생성기, 행운의 번호',
  jsonLd,
} = Astro.props;

const jsonLdItems = jsonLd ? (Array.isArray(jsonLd) ? jsonLd : [jsonLd]) : [];

const canonicalUrl = `${siteUrl}${path}`;
const ogImage = `${siteUrl}/og-image.png`;
---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />

    <!-- Canonical -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="ko_KR" />
    <meta property="og:site_name" content="Daytive Lotto" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Favicon & PWA -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#3B82F6" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="Daytive Lotto" />
    <link rel="apple-touch-icon" href="/icon-192.png" />

    <title>{title}</title>

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-V84DJFKSNY"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-V84DJFKSNY');
    </script>

    <!-- JSON-LD Structured Data -->
    {jsonLdItems.map((item) => (
      <script type="application/ld+json" set:html={JSON.stringify(item)} />
    ))}
  </head>
  <body class="min-h-screen flex flex-col bg-gradient-to-b from-gray-50 to-white dark:from-gray-900 dark:to-gray-800 text-gray-900 dark:text-gray-100">
    <main class="flex-1 flex flex-col pb-20">
      <slot />
    </main>

    <!-- 하단 네비게이션 -->
    <nav class="fixed bottom-0 left-0 right-0 bg-white/80 dark:bg-gray-900/80 backdrop-blur-lg border-t border-gray-200 dark:border-gray-700 z-50">
      <div class="max-w-md mx-auto flex">
        <a href="/" class="flex-1 flex flex-col items-center gap-1 py-3 text-gray-400 hover:text-blue-500 transition-colors" data-nav="home">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          <span class="text-xs">추천</span>
        </a>
        <a href="/winning" class="flex-1 flex flex-col items-center gap-1 py-3 text-gray-400 hover:text-blue-500 transition-colors" data-nav="winning">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="text-xs">당첨확인</span>
        </a>
        <a href="/favorites" class="flex-1 flex flex-col items-center gap-1 py-3 text-gray-400 hover:text-blue-500 transition-colors" data-nav="favorites">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
          </svg>
          <span class="text-xs">즐겨찾기</span>
        </a>
      </div>
    </nav>
  </body>
</html>

<style is:global>
  /* 애니메이션 */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.3s ease-out forwards;
  }
</style>

<script>
  // 현재 페이지에 맞는 네비게이션 아이템 활성화
  const path = window.location.pathname;
  const navMap: Record<string, string> = {
    '/': 'home',
    '/winning': 'winning',
    '/favorites': 'favorites',
  };
  const activeNav = navMap[path] || 'home';
  const activeLink = document.querySelector(`[data-nav="${activeNav}"]`);
  if (activeLink) {
    activeLink.classList.remove('text-gray-400');
    activeLink.classList.add('text-blue-500');
  }
</script>
