---
import Layout from '../layouts/Layout.astro';
import StatsChart from '../components/StatsChart';

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "로또 번호 통계",
  "description": "로또 번호별 출현 빈도, 핫 번호, 콜드 번호 등 당첨번호 통계를 확인하세요.",
  "url": "https://lotto.daytive.com/stats/",
  "isPartOf": {
    "@type": "WebApplication",
    "name": "Daytive Lotto",
    "url": "https://lotto.daytive.com"
  },
};
---

<Layout
  title="통계 | Daytive Lotto"
  description="로또 번호별 출현 빈도, 핫 번호, 콜드 번호 등 당첨번호 통계를 확인하세요."
  path="/stats/"
  keywords="로또 통계, 로또 번호 빈도, 로또 핫 번호, 로또 콜드 번호, 로또 분석, 번호별 출현 빈도"
  jsonLd={jsonLd}
>
  <div class="flex-1 p-4 sm:p-8">
    <div class="max-w-md mx-auto">
      <header class="mb-6">
        <h1 class="text-2xl sm:text-3xl font-bold">통계</h1>
        <p class="text-gray-500 dark:text-gray-400 mt-1">번호별 출현 빈도 분석</p>
      </header>

      <StatsChart client:load />
    </div>
  </div>
</Layout>
